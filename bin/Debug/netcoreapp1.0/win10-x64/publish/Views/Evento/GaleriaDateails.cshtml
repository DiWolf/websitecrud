@model IEnumerable<elguero.Entities.Eventos.Galeria>
@{
    ViewData["Title"] = "Galeria de Imagenes de Eventos";
}

<!--Fullscreen Image Start-->
<img id="full-screen-background-image" src="~/images/slider/2.jpg" alt="img" />
<!--Fullscreen Image End-->
<!--Container Start-->

<!--Container Start-->
<section id="container-fluid">
    <!--form start..-->
    <div id="container" class="contact">
        <div class="two-third">
           <h2>Galeria de Imagenes</h2>
           <ul class="portfolio_items isotope-container clearfix portfolio-page-template gallery">
               @foreach(var item in Model)
{
    <li class="isotope-item all logos">
                    <div class="item-container">
                      <img src="@Html.DisplayFor(modelItem => item.RutaImage)" alt="" />
                      <a class="link_to_image" data-gal="prettyPhoto[gallery2]" href="@Html.DisplayFor(modelItem => item.RutaImage2)"> </a>
                    </div>
                    <div class="portfolio_post_content">
                       
                    </div>
                </li>
   
}                    
            </ul>



    </div>



</section>

<script>
    jQuery(document).ready(function ($) {
        'use strict';
        $("a[data-gal^='prettyPhoto']").prettyPhoto({ hook: 'data-gal' });
    });
</script>