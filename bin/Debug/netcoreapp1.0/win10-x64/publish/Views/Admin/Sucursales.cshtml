@model IEnumerable<elguero.Entities.Sucursal>
    @{
    Layout= "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Sucursales";
}

	<div class="pageheader">
                        <div class="media">
                            <div class="pageicon pull-left">
                                <i class="fa fa-home"></i>
                            </div>
                            <div class="media-body">
                                <ul class="breadcrumb">
                                    <li><a href="#"><i class="glyphicon glyphicon-home"></i></a></li>
                                    <li><a href="#">Páginas</a></li>
                                    <li>Sucursales</li>
                                </ul>
                                <h4>Sucursales</h4>
                            </div>
                        </div><!-- media -->
                    </div><!-- pageheader -->
                    
                    <div class="contentpanel">
                        
                         <div class="panel panel-success">
                                    <div class="panel-heading">
                                        <div class="panel-btns">
                                            <a href="#" class="panel-minimize tooltips" data-toggle="tooltip" title="Minimize Panel"><i class="fa fa-minus"></i></a>
                                            <a href="#" class="panel-close tooltips" data-toggle="tooltip" title="Close Panel"><i class="fa fa-times"></i></a>
                                        </div><!-- panel-btns -->
                                        <h3 class="panel-title">Entradas página Sucursales</h3>                                      
                                    </div>
                                    <div class="panel-body">
                                         <table id="tblHistoria" class="table table-striped table-bordered">
                                                <thead>
                                                        <tr>
                                                            <th>Sucursal</th>
                                                            <th>Ubicación</th>
                                                            <th></th>
                                                        </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach(var item in Model)
                                                    {
                                                        <tr>
                                                            <td>@Html.DisplayFor(modelItem => item.SucursalNombre)</td>
                                                            <td>@Html.Raw(item.Ubicacion)</td>
                                                            <td>
                                                                <div class="btn-group-list pull-right">
                                                
                                                                  <a  asp-area="" asp-controller="Admin" asp-action="EditarHistoria" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa fa-pencil"></i></a>
                                                    
                                                </div>
                                                                </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                         </table>
                                    </div><!-- panel-body -->
                                    <div class="panel-footer">
                                         <a class="btn btn-default" asp-area="" asp-controller="Admin" asp-action="CrearSucursal">Agregar Sucursal</a>
                                </div><!-- panel -->
                    
                    </div><!-- contentpanel -->

<script src="~/assets/jscustom/ScriptHistoria.js"/>