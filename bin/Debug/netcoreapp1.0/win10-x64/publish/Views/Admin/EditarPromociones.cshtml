                                <h4>Agregar Promociones</h4>
                            </div>
                        </div><!-- media -->
                    </div><!-- pageheader -->
<div class="contentpanel">
                      
                         <div class="panel panel-success">
  @using (Html.BeginForm(FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
              @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="panel-heading">
                                        <div class="panel-btns">
                                            <a href="#" class="panel-minimize tooltips" data-toggle="tooltip" title="Minimize Panel"><i class="fa fa-minus"></i></a>
                                            <a href="#" class="panel-close tooltips" data-toggle="tooltip" title="Close Panel"><i class="fa fa-times"></i></a>
                                        </div><!-- panel-btns -->
                                        <h3 class="panel-title">Agregar promoci칩n</h3>                                      
                                    </div>

                                     <div class="panel-body">
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label">Promoci칩n:</label>
                                                <div class="col-sm-6">
                                                    @Html.TextBoxFor(model => model.Titulo, new { @class = "form-control", @placeholder = "Nombre de la promoci칩n" })
                                                </div>
                                            </div><!-- form-group -->
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label">Precio:</label>
