                                                    @Html.TextBoxFor(model => model.Precio, new { @class = "form-control", @placeholder = "Precio de venta - Poner 0 en caso de no aplicar." })
                                                </div>
                                            </div><!-- form-group -->
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label">Imagen</label>
                                                <div class="col-sm-6">
                                                      <input type="file" name="files" id="files" />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label">Ruta:</label>
                                                <div class="col-sm-6">
                                                     @Html.TextBoxFor(model => model.RutaImage, new { @class = "form-control", @placeholder = "Ruta de archivo actual." })
                                                </div>
                                            </div>
                                     </div>
                                     <div class="panel-footer">
                                          <button type="submit" class="btn btn-success btn-rounded">Guardar</button>
                                          <a asp-area="" asp-controller="Admin" asp-action="MostrarPromociones" class="btn btn-default btn-rounded">Retornar</a>
                                </div><!-- panel -->

        }
                         </div>